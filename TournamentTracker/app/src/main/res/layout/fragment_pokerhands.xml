<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/Title"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="center_horizontal"
                    />
            </TableRow>

            <TableRow android:gravity="center_horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/royalFlush" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/royaldescription"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="center_horizontal"/>
            </TableRow>

            <TableRow android:gravity="center_horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/straightFlush" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/straightflushdescription"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="center_horizontal"/>
            </TableRow>

            <TableRow android:gravity="center_horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/fourKind" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/fourdescription"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="center_horizontal"/>
            </TableRow>

            <TableRow android:gravity="center_horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/fullHouse" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/fulldescription"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="center_horizontal"/>
            </TableRow>

            <TableRow android:gravity="center_horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/flush" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/flushdescription"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="center_horizontal"/>
            </TableRow>

            <TableRow android:gravity="center_horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/straight" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/straightdescription"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="center_horizontal"/>
            </TableRow>

            <TableRow android:gravity="center_horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/threeKind" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/threedescription"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="center_horizontal"/>
            </TableRow>

            <TableRow android:gravity="center_horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/twoPair" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/twopairdescription"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="center_horizontal"/>
            </TableRow>

            <TableRow android:gravity="center_horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/pair" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/pairdescription"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="center_horizontal"/>
            </TableRow>

            <TableRow android:gravity="center_horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/highcard" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/highcarddescription"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="center_horizontal"/>
            </TableRow>

        </TableLayout>
    </ScrollView>

</LinearLayout>